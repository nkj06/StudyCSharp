@model IEnumerable<EddyHomePage.Models.BoardArticles>

@{
    ViewBag.Title = "List";
}

@section scripts {
    <script>
        $(document).ready(function () {
            $(".footable").footable();
        });
    </script>
}

<div id="feedback" class="inner-content">

    <section id="page-title" class="inner-section">
        <div class="container-fluid nopadding wow fadeInRight" data-wow-delay="0.4s" data-wow-offset="10">
            <h2 class="font-accident-two-normal uppercase">Board List</h2>
            <h5 class="font-accident-one-bold hovercolor uppercase">@Html.ActionLink("Register", "Create")</h5>
        </div>
    </section>

    <!-- List Block -->
    <section class="inner-section feedback feedback-light">

        <div class="container-fluid nopadding">

            <div class="row">
                <div class="col-md-12 e-centered wow fadeInDown" data-wow-delay="0.6s" data-wow-offset="10">
                    <div class="dividewhite2"></div>
                    <div id="form-messages"></div>
                    <!--실제 리스트 영역-->
                    <table class="table footable table-striped" data-page-size="10">
                        <thead>
                            <tr>
                                <th data-sort-ignore="true">
                                    @Html.DisplayNameFor(model => model.ArticleIDX)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ArticleType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Contents)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IPAddress)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RegistDate)
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ArticleIDX)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ArticleType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contents)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IPAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RegistDate)
                                    </td>
                                </tr>
                            }
                        </tbody>

                        <tfoot>
                            <tr>
                                <td colspan="6" style="text-align:right;">
                                    <ul class="pagination pull-right">
                                    </ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    <!--/실제 리스트 영역 끝-->
                </div>
                <div class="col-md-2">&nbsp;</div>
                <div class="col-md-12 divider-dynamic"></div>
            </div>

        </div>

        <div class="dividewhite6"></div>

    </section>
    <!-- /List Block -->

</div>



